@model List<Oefententamen.Models.Reservering>

@{
    ViewData["Title"] = "Edit";
    int count = 0;
}

<h1>Edit</h1>

<h4>Reservering</h4>
<hr />
<form asp-action="EditWithKlantId">
    <input type="hidden" name="KlantId" value="@ViewData["KlantId"]" />

    <table class="table text-center">
        <thead>
            <tr>
                @for (int i = 1; i <= 6; i++)
                {
                    <th>@i</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                    if(count++ % 6 == 0)
                    {
                        @:</tr></tr>
                    }
                <td>
                    @if (item.KlantId == (int)ViewData["KlantId"])
                    {
                    <input type="checkbox" name="reserveringsIds" value="@item.Id" @Html.Raw(item.Bezet ? "checked=\"checked\"" : "") />
                    <p class="bg-primary text-white">@item.Naam</p>
                    }
                    else if (item.Bezet)
                    {
                    <input type="checkbox" name="reserveringsIds" value="@item.Id" @Html.Raw(item.Bezet ? "checked=\"checked\"" : "") disabled />
                    <p class="bg-danger text-white">@item.Naam</p>
                    }
                    else
                    {
                    <input type="checkbox" name="reserveringsIds" value="@item.Id" @Html.Raw(item.Bezet ? "checked=\"checked\"" : "") />
                    <p class="bg-success text-white">@item.Naam</p>
                    }
                </td>
                }
            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}